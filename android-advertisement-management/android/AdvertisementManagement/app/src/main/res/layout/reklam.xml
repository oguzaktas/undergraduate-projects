<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ListAdvertisement"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/firmaAdi"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Firma" />

    <TextView
        android:id="@+id/kategori"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/firmaAdi"
        android:text="Kategori" />

    <TextView
        android:id="@+id/kampanyaIcerik"
        android:layout_below="@+id/firmaAdi"
        android:layout_marginTop="16dp"
        android:maxLines="3"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:text="Kampanya" />

    <TextView
        android:id="@+id/kampanyaSuresi"
        android:layout_below="@+id/firmaAdi"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/kampanyaIcerik"
        android:text="Kampanya Suresi" />
</RelativeLayout>